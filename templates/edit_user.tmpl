{{define "edit_user"}}

<!-- Modal -->
<div class="modal fade" id="editUserModalId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editUserLabel">Edit Patient</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form>
      <div class="modal-body">
        
          <div class="form-group">
            <label for="nameId">Name</label>
            <input class="form-control" name="Name" id="editNameId" placeholder="Enter Name">
          </div>
            <div class="form-group">
            <label for="lastNameId">Last Name</label>
            <input  class="form-control" name="LastName" id="editLastNameId" placeholder="Enter Last Name">
          </div>

              <div class="form-group">
            <label for="phoneNumId">Phone Number</label>
            <input  class="form-control" name="PhoneNumber" id="editPhoneNumId" placeholder="Enter Phone Number">
          </div>
                <div class="form-group">
            <label for="ageId">Ager</label>
            <input  class="form-control" name="Age" id="editAgeId" placeholder="Enter Age">
          </div>
          
          <input type="hidden" id="editPatientId" name="ID" value="">


      </div>
      <div class="modal-footer">
        <button id="editCancelModalBtnId" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" onClick="updatePatient();">Update Patient</button>
      </div>
        </form>
    </div>
  </div>
</div>

{{end}}}